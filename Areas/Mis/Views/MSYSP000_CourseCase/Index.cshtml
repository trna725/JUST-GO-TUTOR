@model IEnumerable<JUSTGOTUTOR.Models.CourseCase>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>
                @await Html.PartialAsync("_PartialFormCreate")
            </th>
            <th>
                @Html.ColumnSort("Id", @Html.DisplayNameFor(model => model.Id))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmTime)
            </th>
            <th>
                @Html.ColumnSort("CaseTime", @Html.DisplayNameFor(model => model.CaseTime))
            </th>
            <th>
                @Html.ColumnSort("StudentNo", @Html.DisplayNameFor(model => model.StudentNo))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.ColumnSort("TeacherNo", @Html.DisplayNameFor(model => model.TeacherNo))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.ColumnSort("CourseNo", @Html.DisplayNameFor(model => model.CourseNo))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeSection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekSection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserMemo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ActionService.RowId = item.Id;
            ActionService.RowData = (item.CaseTime == null) ? "" : $"{item.CaseTime} {item.CourseName}";
            <tr>
                <td>
                    @await Html.PartialAsync("_PartialFormEdit")
                    @await Html.PartialAsync("_PartialFormDelete")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeSection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeekSection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserMemo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
            </tr>
        }
    </tbody>
</table>
