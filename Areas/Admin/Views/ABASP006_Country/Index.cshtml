@model IEnumerable<JUSTGOTUTOR.Models.Country>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>
                @await Html.PartialAsync("_PartialFormCreate")
            </th>
            <th>
                @Html.ColumnSort("CountryNo", @Html.DisplayNameFor(model => model.CountryNo))
            </th>
            <th>
                @Html.ColumnSort("CountryName", @Html.DisplayNameFor(model => model.CountryName))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ActionService.RowId = item.Id;
            ActionService.RowData = (item.CountryName == null) ? "" : $"{item.CountryNo} {item.CountryName}";
            <tr>
                <td>
                    @await Html.PartialAsync("_PartialFormEdit")
                    @await Html.PartialAsync("_PartialFormDelete")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
            </tr>
        }
    </tbody>
</table>
