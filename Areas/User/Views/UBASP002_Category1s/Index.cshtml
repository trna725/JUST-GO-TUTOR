@model IEnumerable<JUSTGOTUTOR.Models.Category1s>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>
                @await Html.PartialAsync("_PartialFormCreate")
            </th>
            <th>
                @Html.ColumnSort("SortNo", @Html.DisplayNameFor(model => model.SortNo))
            </th>
            <th>
                @Html.ColumnSort("CategoryNo", @Html.DisplayNameFor(model => model.CategoryNo))
            </th>
            <th>
                @Html.ColumnSort("CategoryName", @Html.DisplayNameFor(model => model.CategoryName))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsImportment)
            </th>
            @* <th>
            @Html.ColumnSort("ParentNo", @Html.DisplayNameFor(model => model.ParentNo))
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.EnglishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ActionService.RowId = item.Id;
            ActionService.RowData = (item.CategoryName == null) ? "" : $"{item.CategoryNo} {item.CategoryName}";
            <tr>
                <td>
                    @await Html.PartialAsync("_PartialFormEdit")
                    @await Html.PartialAsync("_PartialFormDelete")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEnabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsImportment)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.ParentNo)
            </td> *@

                <td>
                    @Html.DisplayFor(modelItem => item.EnglishName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
            </tr>
        }
    </tbody>
</table>
